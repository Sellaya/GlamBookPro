{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        }
      },
      "required": ["email"]
    },
    "Booking": {
      "title": "Booking",
      "description": "Represents a booking made by a client for makeup services.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Booking entity."
        },
        "clientName": {
          "type": "string",
          "description": "The name of the client."
        },
        "bookingDate": {
          "type": "string",
          "description": "The date for which the booking is made.",
          "format": "date-time"
        },
        "service": {
          "type": "string",
          "description": "The service booked."
        },
        "totalCost": {
          "type": "number",
          "description": "The total cost of the booking."
        },
        "status": {
          "type": "string",
          "description": "The status of the booking.",
          "enum": ["Paid", "Unpaid", "Cancelled"]
        }
      },
      "required": [
        "id",
        "clientName",
        "bookingDate",
        "service",
        "totalCost",
        "status"
      ]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "collections": [
      {
        "path": "/users/{userId}",
        "schema": {
          "$ref": "#/entities/UserProfile"
        },
        "description": "Stores user profile information, keyed by user ID."
      },
      {
        "path": "/users/{userId}/bookings/{bookingId}",
        "schema": {
          "$ref": "#/entities/Booking"
        },
        "description": "Stores bookings for a specific user. Path-based ownership ensures a user can only access their own bookings."
      }
    ]
  }
}
